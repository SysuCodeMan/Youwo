<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/life_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/darkBlue"
                android:id="@+id/top">
                <ImageButton
                    android:id="@+id/account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/account2"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:layout_gravity="center_vertical"
                    android:background="@color/darkBlue"/>
                <ImageButton
                    android:id="@+id/express"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/express1"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:layout_gravity="center_vertical"
                    android:background="@color/darkBlue"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_above="@+id/bottom">
                <TextView
                    android:id="@+id/tv_specific_data_txtDataRange"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24dip"
                    android:layout_marginTop="20dp"
                    android:text="账单" />

                <com.example.john.finalproject.Life.account.CornerListView
                    android:id="@+id/lv_specific_data_list"
                    android:padding="10dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/tv_specific_data_txtDataRange"
                    android:cacheColorHint="#00000000" >
                </com.example.john.finalproject.Life.account.CornerListView>

            </RelativeLayout>



            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottom">
                <ImageButton
                    android:id="@+id/life_sport_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/sport1"
                    android:background="@color/darkBlue"/>
                <ImageButton
                    android:id="@+id/life_life_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/life2_1"
                    android:background="@color/darkBlue"/>
                <ImageButton
                    android:id="@+id/life_study_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/study1"
                    android:background="@color/darkBlue"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

