<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homework_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/homeworkhead"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkBlue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkBlue"
                    android:textSize="25sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:text="我的作业"/>
                <TextView
                    android:id="@+id/homework_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkBlue"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Buttons"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_below="@+id/homeworkhead"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/homework_history_list"
                    android:layout_weight="6"
                    android:descendantFocusability="beforeDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                </ListView>
                <TextView
                    android:text="新增作业："
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edit_homework"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/save_homework"
                    android:layout_above="@+id/study_foot"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5sp"
                    android:textSize="20sp"
                    android:text="保存新增作业"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/darkBlue"
                    android:background="@drawable/search_grade_button_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </RelativeLayout>
    </FrameLayout>

