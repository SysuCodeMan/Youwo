<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:fitsSystemWindows="true"
    android:background="@color/darkBlue">

    <ImageView
        android:id="@+id/login_icon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bulb"/>
    <TextView
        android:id="@+id/login_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_icon"
        android:layout_marginTop="5dp"
        android:text="有我，就够了"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="28sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/user_name_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/login_app_name"
        app:hintTextAppearance="@style/HintTextStyle"
        android:textColorHint="@color/lightgray"
        app:errorTextAppearance="@style/ErrorTextStyle"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:textColorHint="@color/lightgray"
            android:textSize="20sp"
            android:textColor="@color/lightgray"
            android:drawablePadding="3dp"
            android:maxLines="1"
            android:maxLength="20"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_login"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/lightgray"
        app:hintTextAppearance="@style/HintTextStyle"
        android:textColorHint="@color/lightgray"
        app:errorTextAppearance="@style/ErrorTextStyle"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textColorHint="@color/lightgray"
            android:inputType="textPassword"
            android:drawablePadding="3dp"
            android:textSize="20sp"
            android:textColor="@color/lightgray"
            android:maxLength="20"
            android:maxLines="1"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_login"
        android:layout_alignRight="@id/password_login"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:text="没有账号？点击注册"
        android:textColor="@color/white"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_below="@id/register_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/mainRed"/>
    <Button
        android:id="@+id/register_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_below="@id/register_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/mainRed"
        android:visibility="gone"/>

</RelativeLayout>
